
# The name of the PGAdapter container. Change this name if you already have a container with this name.
PGADAPTER_CONTAINER_NAME=pgadapter
# The port on the local host that is mapped to port 5432 on the pgadapter container.
PGADAPTER_HOST_PORT=9031

# The full path of the Google Cloud credentials file that should be used for PGAdapter.
GOOGLE_APPLICATION_CREDENTIALS=/local/path/to/credentials.json

# Project, instance and database for Cloud Spanner.
GOOGLE_CLOUD_PROJECT=my-project
SPANNER_INSTANCE=my-instance
SPANNER_DATABASE=my-database

# The name of the PostgreSQL container. Change this name if you already have a container with this name.
POSTGRES_CONTAINER_NAME=postgres
# The port on the local host that is mapped to port 5432 on the postgres container.
POSTGRES_HOST_PORT=9032

# PostgreSQL user, password and database name.
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secret
POSTGRES_DB=my-database
